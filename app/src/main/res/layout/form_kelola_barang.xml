    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nama_jmlh_brg"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/floating_hint_margin"
        android:layout_gravity="center_vertical|center_horizontal"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#c40004"
            android:inputType="number"
            android:layout_marginTop="@dimen/floating_hint_margin"
            android:hint="Jumlah Barang"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/edtjmlhbrg"
            android:layout_gravity="center_vertical|center_horizontal"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/imgGambar"
        android:src="@drawable/redhunter"
        android:background="#ffff"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_login"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Pilih Foto"
        android:id="@+id/btnPilihgambar"
        android:textColor="#fff"

        />



