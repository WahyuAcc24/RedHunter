<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/swipedetailhistoryinventory"
    >
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/lemari"
        android:layout_gravity="center_horizontal"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Barang"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtnamadetailinventory"
        android:text="nama"
        android:layout_marginTop="70dp"
        android:textColor="#000"
        android:layout_marginStart="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtsatuandetailinventory"
        android:text="satuan"
        android:layout_marginTop="50dp"
        android:textColor="#000"
        android:layout_marginStart="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtjmlhdetailinventory"
        android:text="Jumlah barang"
        android:layout_marginTop="50dp"
        android:textColor="#000"
        android:layout_marginStart="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txthargadetailinventory"
        android:text="harga barang"
        android:layout_marginTop="50dp"
        android:textColor="#000"
        android:layout_marginStart="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtuserinventory"
        android:text="Nama User"
        android:layout_marginTop="50dp"
        android:textColor="@color/merah"
        android:layout_marginStart="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtdivisiinventory"
        android:text="Divisi"
        android:layout_marginTop="50dp"
        android:textColor="@color/merah"
        android:layout_marginStart="20dp"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_login"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:text="Hapus barang"
        android:id="@+id/btnhapusinventoryhrd"
        />



</LinearLayout>
</ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
